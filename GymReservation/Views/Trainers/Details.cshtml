@model GymReservation.Models.Trainer

<h1>@Model.FullName</h1>
<hr />

<p><strong>Uzmanlık:</strong> @Model.Specialty</p>
<p><strong>Biyografi:</strong> @Model.Bio</p>

<h3>Verdiği Hizmetler</h3>

@if (Model.TrainerServices == null || !Model.TrainerServices.Any())
{
    <p>Bu antrenöre atanmış hizmet bulunmuyor.</p>
}
else
{
    <ul>
        @foreach (var ts in Model.TrainerServices)
        {
            <li>@ts.GymService?.Name</li>
        }
    </ul>
}

<a asp-action="Index" class="btn btn-secondary">Geri</a>
