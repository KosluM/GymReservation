@model IEnumerable<GymReservation.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenörler</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Sistemde kayıtlı antrenör bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.FullName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@t.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
