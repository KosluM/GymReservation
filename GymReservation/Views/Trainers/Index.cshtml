@model IEnumerable<GymReservation.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenörler</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        Sistemde kayıtlı antrenör bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Hizmet Sayısı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                var serviceCount = t.TrainerServices == null ? 0 : t.TrainerServices.Count;

                <tr>
                    <td>@t.FullName</td>
                    <td>@serviceCount</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
 
                    <a asp-action = "Details" asp-route-id ="@t.Id">Detay</a> 
                    <a asp-action = "Delete" asp-route-id="@t.Id">Sil</a>
                       }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@t.Id">Detay</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
