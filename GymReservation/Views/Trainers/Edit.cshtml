@model GymReservation.Models.Trainer

@using GymReservation.Models
@{
    ViewData["Title"] = "Antrenör Düzenle";

    var services = ViewBag.Services as IEnumerable<GymService> ?? Enumerable.Empty<GymService>();
    var selectedIds = ViewBag.SelectedServiceIds as IEnumerable<int> ?? Enumerable.Empty<int>();
}

<h1>Antrenör Düzenle</h1>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Specialty" class="form-label"></label>
        <input asp-for="Specialty" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="FitnessCenterId" class="form-label"></label>
        <select asp-for="FitnessCenterId"
                class="form-select"
                asp-items="ViewBag.FitnessCenterId">
            <option value="">Salon seçiniz</option>
        </select>
        <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Verdiği Hizmetler</label>
        <div class="border rounded p-2">
            @foreach (var s in services)
            {
                var isChecked = selectedIds.Contains(s.Id);

                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="selectedServiceIds"
                           value="@s.Id"
                    @(isChecked ? "checked" : "") />
                    <label class="form-check-label">
                        @s.Name
                    </label>
                </div>
            }
        </div>
        <small class="text-muted">Birden fazla hizmeti aynı anda seçebilirsin.</small>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
