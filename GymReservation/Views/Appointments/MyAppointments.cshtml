@model IEnumerable<GymReservation.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<h2 class="mt-4 mb-3">Randevularım</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz bir randevunuz bulunmuyor.
    </div>
}
else
{
    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Hizmet</th>
                <th>Antrenör</th>
                <th>Süre</th>
                <th>Fiyat</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.StartDateTime.ToString("dd.MM.yyyy")</td>
                    <td>@a.StartDateTime.ToString("HH:mm")</td>
                    <td>@a.GymService?.Name</td>
                    <td>@a.Trainer?.FullName</td>
                    <td>@a.DurationMinutes dk</td>
                    <td>@a.Price ₺</td>
                    <td>
                        @if (a.Status == "Onaylandı")
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else if (a.Status == "İptal")
                        {
                            <span class="badge bg-danger">İptal</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Beklemede</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
