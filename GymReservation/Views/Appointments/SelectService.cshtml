@model IEnumerable<GymReservation.Models.GymService>

@{
    ViewData["Title"] = "Randevu Al - Hizmet Seç";
}

<h2 class="mb-3">Randevu Al</h2>
<p class="text-muted mb-4">Önce randevu almak istediğiniz hizmeti seçin.</p>

<div class="row g-3">
    @foreach (var service in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@service.Name</h5>

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="service-price">@service.Price ₺</span>
                        <span class="service-duration">@service.DurationMinutes dk</span>
                    </div>

                    @if (!string.IsNullOrEmpty(service.Description))
                    {
                        <p class="card-muted mb-2">@service.Description</p>
                    }

                    @if (service.FitnessCenter != null)
                    {
                        <span class="chip mb-3">Salon: @service.FitnessCenter.Name</span>
                    }

                    <div class="mt-auto">
                        <a asp-action="SelectTrainer"
                           asp-route-serviceId="@service.Id"
                           class="btn btn-primary btn-sm">
                            Bu Hizmet için Randevu Al
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
