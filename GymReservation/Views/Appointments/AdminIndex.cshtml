@model IEnumerable<GymReservation.Models.Appointment>

@{
    ViewData["Title"] = "Randevular (Admin)";
}

<h2 class="mt-4 mb-3">Randevular (Admin)</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.StartDateTime.ToString("dd.MM.yyyy")</td>
                <td>@a.StartDateTime.ToString("HH:mm")</td>
                <td>@a.User?.FullName</td>
                <td>@a.Trainer?.FullName</td>
                <td>@a.GymService?.Name</td>
                <td>
                    @if (a.Status == "Onaylandı")
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else if (a.Status == "İptal")
                    {
                        <span class="badge bg-danger">İptal</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Beklemede</span>
                    }
                </td>
                <td>
                    <form asp-action="ChangeStatus" method="post" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@a.Id" />

                        <button name="status" value="Onaylandı" class="btn btn-success btn-sm">
                            ✓ Onayla
                        </button>

                        <button name="status" value="İptal" class="btn btn-danger btn-sm">
                            ✕ İptal
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
