@model IEnumerable<GymReservation.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Randevu Al - Tarih/Saat Seç";
    var service = ViewBag.SelectedService as GymReservation.Models.GymService;
    var trainer = ViewBag.SelectedTrainer as GymReservation.Models.Trainer;

    int serviceId = service?.Id ?? 0;
    int trainerId = trainer?.Id ?? 0;
}

<div class="container mt-4">

    <h2 class="mb-3">Randevu AI - Tarih/Saat Seç</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-3 justify-content-between align-items-center">
                <div>
                    <div class="text-muted small">Hizmet</div>
                    <div class="fw-bold">
                        @service?.Name
                        <span class="text-muted fw-normal">
                            (@service?.DurationMinutes dk, @service?.Price ₺)
                        </span>
                    </div>
                </div>

                <div>
                    <div class="text-muted small">Antrenör</div>
                    <div class="fw-bold">@trainer?.FullName</div>
                </div>

                <div class="ms-auto">
                    <a asp-action="SelectTrainer" asp-route-serviceId="@serviceId" class="btn btn-outline-secondary">
                        Geri
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            Bu antrenör için ileri tarihli müsaitlik bulunamadı.
        </div>
    }
    else
    {
        @* Gün bazlı gruplama *@
        @foreach (var dayGroup in Model.GroupBy(x => x.Date.Date).OrderBy(g => g.Key))
        {
            <div class="d-flex align-items-center justify-content-between mt-4 mb-2">
                <h5 class="mb-0 fw-bold">@dayGroup.Key.ToString("dd.MM.yyyy dddd")</h5>
                <span class="text-muted small">@dayGroup.Count() slot</span>
            </div>

            <div class="row g-3">
                @foreach (var a in dayGroup.OrderBy(x => x.StartTime))
                {
                    var duration = (int)(a.EndTime - a.StartTime).TotalMinutes;
                    if (duration <= 0 && service != null)
                    {
                        duration = service.DurationMinutes;
                    }

                    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                        <div class="card slot-card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-bold fs-5">
                                            @a.StartTime.ToString(@"hh\:mm") - @a.EndTime.ToString(@"hh\:mm")
                                        </div>
                                        <div class="text-muted small">Süre: @duration dk</div>
                                    </div>

                                
                                </div>

                                <form asp-action="CreateFromAvailability" method="post" class="mt-3">
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="availabilityId" value="@a.Id" />
                                    <input type="hidden" name="serviceId" value="@serviceId" />
                                    <input type="hidden" name="trainerId" value="@trainerId" />

                                    <button type="submit" class="btn btn-success w-100">
                                        Bu Saati Seç
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }

</div>

<style>
    .slot-card {
        border-radius: 14px;
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .slot-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(0,0,0,.12);
        }

        .slot-card .btn {
            border-radius: 10px;
            font-weight: 600;
        }
</style>
