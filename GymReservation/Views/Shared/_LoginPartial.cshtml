@using Microsoft.AspNetCore.Identity
@using GymReservation.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser? currentUser = null;

    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && currentUser != null)
    {
        <li class="nav-item me-2 d-flex align-items-center">
            <span class="navbar-text small text-light">
                Merhaba, @(string.IsNullOrWhiteSpace(currentUser.FullName)
            ? currentUser.Email
            : currentUser.FullName)
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline"
                  asp-controller="Account"
                  asp-action="Logout"
                  method="post">
                <button type="submit" class="nav-link btn btn-link text-light">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light"
               asp-controller="Account"
               asp-action="Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light"
               asp-controller="Account"
               asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>
