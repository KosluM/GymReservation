@using Microsoft.AspNetCore.Identity
@using GymReservation.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymReservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-nav shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <span class="logo-dot"></span> GymReservation
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
        
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FitnessCenters" asp-action="Index">Salonlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GymServices" asp-action="Index">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Ai" asp-action="FitnessRecommendation">
                                AI Fitness (Gemini)
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trainers" asp-action="Index">Antrenörler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TrainerAvailabilities" asp-action="Index">Müsaitlikler</a>

                            @* Giriş yapan kullanıcıya özel menüler *@
                            @if (User.Identity!.IsAuthenticated)
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="SelectService">Randevu Al</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">Randevularım</a>
                            </li>
                            }

                        @* Sadece Admin’e görünen linkler *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="AdminIndex">Randevular (Admin)</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">Yönetim Paneli</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-2 d-flex align-items-center">
                                <span class="navbar-text small text-light">
                                    Merhaba, @User.Identity!.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" class="btn btn-outline-light btn-sm me-2" asp-action="Register">Register</a>

                            </li>
                            <li class="nav-item">
                                <a asp-controller="Account" class="btn btn-light btn-sm" asp-action="Login">Login</a>

                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="page-wrapper">
        <main role="main" class="pb-3">
            <div class="container mt-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer mt-auto py-3 border-top">
        <div class="container d-flex justify-content-between small text-muted">
            <span>© @DateTime.Now.Year - GymReservation</span>
            <span>Ders Projesi • ASP.NET Core MVC</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
