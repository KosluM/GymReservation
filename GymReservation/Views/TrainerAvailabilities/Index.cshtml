@model IEnumerable<GymReservation.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Antrenör Müsaitlikleri";
}

<h2 class="mb-3">Antrenör Müsaitlikleri</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Müsaitlik Ekle</a>
    </p>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Antrenör</th>
            <th>Salon</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Trainer.FullName</td>
                <td>@item.Trainer.FitnessCenter?.Name</td>
                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                <td>
                    @item.StartTime.ToString(@"hh\:mm") -
                    @item.EndTime.ToString(@"hh\:mm")
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
