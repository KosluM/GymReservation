@model IEnumerable<GymReservation.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Antrenör Müsaitlikleri";
}

<h2 class="mt-4 mb-3">Antrenör Müsaitlikleri</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Kayıtlı müsaitlik bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle shadow-sm bg-white">
        <thead class="table-dark">
            <tr>
                <th>Antrenör</th>
                <th>Tarih</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Trainer?.FullName</td>
                    <td>@a.Date.ToShortDateString()</td>
                    <td>@a.StartTime.ToString(@"hh\:mm")</td>
                    <td>@a.EndTime.ToString(@"hh\:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
