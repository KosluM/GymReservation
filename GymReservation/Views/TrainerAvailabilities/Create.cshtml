@model GymReservation.Models.TrainerAvailability

@{
    ViewData["Title"] = "Müsaitlik Ekle";
}

<h2 class="mb-3">Antrenör Müsaitlik Ekle</h2>

<form asp-action="Create" method="post" class="card shadow-sm">
    <div class="card-body">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="TrainerId" class="form-label">Antrenör</label>
            <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Tarih</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
                <input asp-for="StartTime" type="time" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
                <input asp-for="EndTime" type="time" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
