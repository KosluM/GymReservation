@model GymReservation.Models.GymService

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<h1>Hizmeti Sil</h1>

<p class="text-warning">Bu hizmeti silmek istediğinize emin misiniz?</p>

<hr />
<dl class="row">
    <dt class="col-sm-3">Ad</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Süre</dt>
    <dd class="col-sm-9">@Model.DurationMinutes dakika</dd>

    <dt class="col-sm-3">Fiyat</dt>
    <dd class="col-sm-9">@Model.Price</dd>

    <dt class="col-sm-3">Salon</dt>
    <dd class="col-sm-9">@Model.FitnessCenter?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
