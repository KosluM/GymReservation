@model GymReservation.Models.GymService

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h1>Hizmet Detayı</h1>

<hr />
<dl class="row">
    <dt class="col-sm-3">Ad</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Süre (dk)</dt>
    <dd class="col-sm-9">@Model.DurationMinutes</dd>

    <dt class="col-sm-3">Fiyat</dt>
    <dd class="col-sm-9">@Model.Price</dd>

    <dt class="col-sm-3">Salon</dt>
    <dd class="col-sm-9">@Model.FitnessCenter?.Name</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Geri</a>
