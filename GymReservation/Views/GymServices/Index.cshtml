@model IEnumerable<GymReservation.Models.GymService>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2 class="mt-4 mb-3">Hizmetler</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Tanımlı hizmet bulunmamaktadır.
    </div>
}
else
{
    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-md-4 col-lg-3 mb-3">
                <div class="card h-100 shadow-sm border-0" style="border-radius: 14px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@s.Name</h5>

                        @if (s.FitnessCenter != null)
                        {
                            <small class="text-muted">
                                @s.FitnessCenter.Name
                            </small>
                        }

                        @if (!string.IsNullOrWhiteSpace(s.Description))
                        {
                            <p class="mt-2" style="font-size: 0.9rem;">
                                @s.Description
                            </p>
                        }

                        <div class="mt-auto pt-2 d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">
                                @s.DurationMinutes dk
                            </span>
                            <span class="fw-bold">
                                @s.Price ₺
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
