@model IEnumerable<GymReservation.Models.GymService>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmetler</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Yeni Hizmet Ekle</a>
    </p>
}

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre (dk)</th>
            <th>Fiyat</th>
            <th>Spor Salonu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price</td>
                <td>@item.FitnessCenter?.Name</td>

                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
 
                    <a asp-action="Details"asp-route-id="@item.Id">Detay</a> 
                    <a asp-action="Delete" asp-route-id ="@item.Id">Sil</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
