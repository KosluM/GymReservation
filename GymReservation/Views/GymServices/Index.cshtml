@model IEnumerable<GymReservation.Models.GymService>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2 class="mb-3">Hizmetler</h2>
<p class="text-muted mb-4">Salonlarda sunulan tüm hizmetlerin süresi, ücreti ve bağlı olduğu salonları buradan yönetebilirsiniz.</p>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>
</p>

<div class="row g-3">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="service-price">@item.Price ₺</span>
                        <span class="service-duration">@item.DurationMinutes dk</span>
                    </div>

                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="card-muted">@item.Description</p>
                    }

                    @if (item.FitnessCenter != null)
                    {
                        <p class="card-muted mb-2">
                            Salon: <strong>@item.FitnessCenter.Name</strong>
                        </p>
                    }

                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm me-1">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
