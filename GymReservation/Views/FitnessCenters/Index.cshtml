@model IEnumerable<GymReservation.Models.FitnessCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<h2 class="mb-3">Spor Salonları</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
    </p>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Salon Adı</th>
            <th>Adres</th>
            <th>Çalışma Saatleri</th>
            <th style="width:220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>
                    @item.OpeningTime.ToString(@"hh\:mm") - @item.ClosingTime.ToString(@"hh\:mm")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
