@model GymReservation.Models.FitnessCenter

@{
    ViewData["Title"] = "Salon Detay";
}

<h2 class="mb-3">Salon Detay</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Salon Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Adres</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Çalışma Saatleri</dt>
            <dd class="col-sm-9">
                @Model.OpeningTime.ToString(@"hh\:mm") - @Model.ClosingTime.ToString(@"hh\:mm")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Geri</a>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    }
</div>
